{# -- Site Meta Content -- #}
{# ----------------------------------------------------------------- #}
{% block html_head_container %}
    {% include '_base/_header.twig' %}
        {% block head %}
        {% endblock %}
    </head>
{% endblock %}

{# -- Body Classes -- #}
{# ----------------------------------------------------------------- #}
{% if term_page %}
    {% set postTypeClass  = 'archive' %}
    {% set postTitleClass = 'is-category' %}
{% else %}
    {% set postTypeClass  = post ? post.post_type : 'default' %}
    {% set postTitleClass = post ? 'is-' ~ post.slug : 'is-archive' %}
{% endif %}

{# -- Site Frame -- #}
{# ----------------------------------------------------------------- #}
<body class="t-{{ postTypeClass }} {{ postTitleClass }}">
    <div id="page" class="o-site" data-load-container>
        <!-- Start `wp_body_open` Function -->
        {{ function('wp_body_open') }}
        <!-- End `wp_body_open` Function -->

        {# Skip (Tab) Navigation #}
        {% include '_components/skip-to-content.twig' %}

        {# Global Site Alert #}
        {% include '_components/alert.twig' with {
            params: {
                visible: globals.site_alert.show_alert|default(false),
                text: globals.site_alert.alert_text|default(null),
                link: globals.site_alert.alert_link|default(null)
            }
        } only %}

        {# Primary Navigation #}
        <header id="masthead" class="o-site__header" data-module-navigation>
            {% block header %}
                {% include '_partials/header.twig' with {
                    params: {
                        menu: primaryMenu,
                        utility: utilityMenu,
                    }
                } only %}
            {% endblock %}
        </header>

        {# Main Site Content Area #}
        <main id="main" class="o-site__main">
            {% block content %}
                Sorry, no content
            {% endblock %}
        </main>

        {# Site Footer #}
        {% block footer %}
            {% include '_partials/footer.twig' %}
            {# {% include 'partials/footer.twig' with {
                params: {
                    cta: showCTA ?? post.cta_hide ?? true,
                    headline: post.cta_headline|default(null),
                    text: post.cta_body|default(null),
                    btn1: post.cta_button_1|default(null),
                    btn2: post.cta_button_2|default(null),
                    logo: globals.footer_logo|default(null),
                    events: globals.footer_events|default(null),
                    about: globals.footer_about|default(null),
                    account: globals.footer_account|default(null),
                    social: globals.footer_profiles|default(null)
                }
            } only %} #}
            <!-- Start `wp_footer` Function -->
            {{ function('wp_footer') }}
            <!-- End `wp_footer` Function -->
        {% endblock %}

    </body>
</html>
