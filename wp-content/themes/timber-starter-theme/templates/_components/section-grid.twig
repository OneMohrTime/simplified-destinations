{# -- Component Variables -- #}

{% set this = {
    grid: params.section|default(null)
} %}

{# -- Component Template -- #}

{% if this.grid %}
    <div class="c-grid">

        {% for item in this.grid.grid %}
            {% set image = get_image(item.meta('card_image'))|default(null) %}
            {% set headline = item.meta('card_headline')|default(null) %}
            {% set text = item.meta('card_body')|default(null) %}
            {% set button = item.meta('card_button')|default(null) %}

            <div class="c-grid__item">
                {% if image %}
                    {% include '_elements/picture.twig' with {
                        params: {
                            src: image,
                            ratio: '16:9'
                        }
                    } only %}
                {% endif %}

                {% if headline %}
                    <h3 class="u-heading">{{ headline }}</h3>
                {% endif %}

                {% if text %}
                    <div class="u-wysiwyg">
                        {{ text }}
                    </div>
                {% endif %}

                {% if button %}
                    {% include '_elements/button.twig' with {
                        params: {
                            url: button.url,
                            text: button.title,
                            target: button.target,
                            primary: false
                        }
                    } only %}
                    {# primary: loop.index == loop.length ? true : false #}
                {% endif %}
            </div>

        {% endfor %}

    </div>
{% endif %}
