{# -- Component Variables -- #}

{% set this = {
    grid: params.items|default(null)
} %}

{# -- Component Template -- #}

{% if this.grid %}
<div class="c-grid">

    {% for item in this.grid %}
        {% set image = get_image(item.meta('banner_image'))|default('https://simplified-destinations.com/wp-content/uploads/placeholder.jpg') %}
        {% set headline = item.title|default(null) %}
        {% set text = item.content|default(null) %}
        {% set button = item.card_button|default(null) %}

        <div class="c-grid__item" data-scroll-trigger>
            {% if image %}
                {% include '_elements/picture.twig' with {
                    params: {
                        src: image,
                        ratio: '1:1'
                    }
                } only %}
            {% endif %}

            {% if headline %}
                <h3 class="u-heading">{{ headline }}</h3>
            {% endif %}

            {% if text %}
                <div class="u-wysiwyg">
                    {{ text }}
                </div>
            {% endif %}

            {% if button %}
                {% include '_elements/button.twig' with {
                    params: {
                        url: button.url,
                        text: button.title,
                        target: button.target,
                        primary: false
                    }
                } only %}
                {# primary: loop.index == loop.length ? true : false #}
            {% endif %}
        </div>

    {% endfor %}

</div>
{% endif %}
