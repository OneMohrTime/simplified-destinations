{# -- Component Variables -- #}

{% set this = {
    image: params.section|default(null)
} %}

{# -- Component Template -- #}

{% if this.image %}
<div class="c-image" data-scroll-trigger>
    {% set image = get_image(this.image.image) %}

    {% include '_elements/picture.twig' with {
        params: {
            src: image
        }
    } only %}

</div>
{% endif %}
